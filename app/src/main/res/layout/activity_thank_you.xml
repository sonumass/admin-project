<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.sonu.resdemo.activity.ConfirmOrderActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@+id/toolbar"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="25sp"
            android:gravity="center"
            android:text="This order has been send to restaurant please wait for confirmation."/>


        <TextView
            android:id="@+id/txt_address"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="This order has been send to restaurant please wait for confirmation."/>
<View
    android:layout_width="match_parent"
    android:layout_height="2px"
    android:layout_marginTop="10dp"
    android:background="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/txt_price"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="This order has been send to restaurant please wait for confirmation."/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"/>


        <TextView
            android:id="@+id/txt_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:text="Liked US : Please share with your friends"/>
        <TextView
            android:id="@+id/txt_thank_you"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedborder"

            android:gravity="center"
            android:padding="10dp"
            android:text="Thank You"
            android:textColor="#ffffff"/>
    </LinearLayout>

</RelativeLayout>